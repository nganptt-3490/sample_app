<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to t("language.english"), locale: :en %></li>
        <li><%= link_to t("language.vietnamese"), locale: :vi %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.home"), "#" %></li>
        <li><%= link_to t("static_pages.help.help"), "#" %></li>
        <% if logged_in? %>
          <li><%= link_to t("static_pages.users"), "#" %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              <%= t "static_pages.account" %> <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to t("static_pages.profile"), current_user %></li>
              <li><%= link_to t("static_pages.setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("auth.logout"), logout_path,
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("auth.login.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
