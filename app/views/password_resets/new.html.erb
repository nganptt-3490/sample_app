<% provide :title, t("password_reset.forgot") %>
<h1><%= t "password_reset.forgot" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with url: password_resets_path, scope: :password_reset do |f| %>
      <%= f.label :email, t("auth.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.submit t("password_reset.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
