<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @microposts.any? %>
      <h3> <%= t "microposts.microposts" %> <%= @user.microposts.count %> </h3>
      <%== pagy_bootstrap_nav @pagy %>
      <ol class = "microposts">
        <%= render @microposts %>
      </ol>
      <%== pagy_bootstrap_nav @pagy %>
    <% else %>
      <p><%= t "microposts.no_post" %></p>
    <% end %>
  </div>
</div>
